name: Vault Extension Tests

on:
  push:
    branches: [ main, develop ]
    paths:
      - 'extensions/vault/**'
      - 'src/realm_backend/**'
      - '.github/workflows/vault-extension-tests.yml'
  pull_request:
    branches: [ main, develop ]
    paths:
      - 'extensions/vault/**'
      - 'src/realm_backend/**'
      - '.github/workflows/vault-extension-tests.yml'

jobs:
  vault-extension-tests:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3
      
    - name: Run Vault Extension Tests
      run: |
        cd extensions/vault
        chmod +x run_tests.sh
        ./run_tests.sh
      
    - name: Upload test results
      if: always()
      uses: actions/upload-artifact@v4
      with:
        name: vault-test-results
        path: |
          extensions/vault/test-results.log
        retention-days: 30
